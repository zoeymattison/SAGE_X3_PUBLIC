Subprog OPENFILES
  Local Char FILE1(250), FILE2(250)
  Local Integer FSTAT1, FSTAT2
  Local Char LINE1(250), LINE2(250)

  [L]FILE1 = "D:\Sage\X3\folders\LIVE\ZFILES\filenames.txt"
  [L]FILE2 = "D:\Sage\X3\folders\LIVE\ZFILES\filepaths.txt"

  Openi [L]FILE1 Using [ZFILE1]
  Iomode adxifs chr$(13)+chr$(10) Using [ZFILE1]

  Openi  [L]FILE2 Using [ZFILE2]
  Iomode adxifs chr$(13)+chr$(10) Using [ZFILE2]

  Repeat
    Rdseq  [L]LINE1 Using [ZFILE1]
     [L]FSTAT1 = [S]fstat

    Rdseq LINE2 Using [ZFILE2]
     [L]FSTAT2 = [S]fstat

    If  [L]FSTAT1 = 0 and  [L]FSTAT2 = 0
      If  [L]LINE1 <> "" and  [L]LINE2 <> "" Then
        Infbox  [L]LINE1, [L]LINE2
      Endif
    Else
      Break
    Endif
  Until  [L]FSTAT1 <> 0 or  [L]FSTAT2 <> 0

  Openi Using [ZFILE1]
  Openi Using [ZFILE2]
End
